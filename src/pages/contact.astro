---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Header from '~/components/widgets/Header.astro';

const metadata = {
  title: 'Léo DEMET - Contact',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->
  <Fragment slot="header">
    <Header
      links={[{ text: 'Retour au site', href: '/' }]}
      actions={[
        {
          text: 'Télécharger mon CV',
          href: 'https://cvdesignr.com/p/670a3f616acec?hl=fr_FR',
          target: '_blank',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>

  <HeroText
    tagline="Contact"
    title="Entrons en contact !"
    subtitle=" Une idée de projet ? Une question ? Ou simplement envie d'échanger ? <br/>  N'hésitez pas à me contacter via ce formulaire."
  />

  <ContactUs
    id="form"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nom',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    description="Je réponds généralement sous 24 heures"
  />
</Layout>
