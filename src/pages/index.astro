  />

  <!-- Widget Formation ****************** -->

  <Steps
    id="experiences"
    title="Formation"
    items={[
      {
        title: `Titre professionnel - Concepteur Développeur d'applications <br /> <span class="font-normal">M2I, Villeneuve-d'Ascq</span> <br /> <span class="text-sm font-normal">Novembre 2020 - Juin 2021</span>`,
        icon: 'tabler:school',
